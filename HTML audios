        <script>
            function Comentari(){
                var comNou = document.createElement('p');
                var com = document.getElementById("comentari").value;
                var text = document.createTextNode(com);
                comNou.appendChild(text);
                document.getElementById("com").appendChild(comNou);
            }
        </script>

